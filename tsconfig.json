{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "module": "Node16",
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": ["node_modules"]
}